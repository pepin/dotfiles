#!/bin/sh

function _ssh_auth_save()
{
    export HOSTNAME=$(hostname)
    mkdir -p "$HOME/.screen/"
    ln -sf "$SSH_AUTH_SOCK" "$HOME/.screen/ssh-auth-sock.$HOSTNAME"
}

case "$1" in
    "zsh")
        export SHELL="/usr/bin/zsh"
        ;;
    "bash")
        export SHELL="/bin/bash"
        ;;
esac

_ssh_auth_save
screen -d -R
